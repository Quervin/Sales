@page "/countries/create"
@inject IRepository repository
@inject NavigationManager navigationManger
@inject SweetAlertService sweetAlertService

<h3>Crear País</h3>

<CountryForm @ref="countryForm" Country="country" OnValidSubmit="CreateAsync" ReturnAction="Return" />


@code {
    private Country country = new();
    private CountryForm? countryForm;

    private async Task CreateAsync()
    {
        var httppResponse = await repository.Post("v1/api/countries", country);
        if (httppResponse.Error)
        {
            var message = await httppResponse.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        Return();
    }

    private void Return()
    {
        countryForm!.FormPostedSuccessfully = true;
        navigationManger.NavigateTo("/countries");
    }
}
